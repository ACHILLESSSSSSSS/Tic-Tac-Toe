    }

    .controls {
      margin: 10px 0;
    }

    select, button {
      font-size: 1rem;
      padding: 8px 12px;
      margin: 0 5px;
      border-radius: 6px;
      border: none;
    }

    #game {
      display: grid;
      grid-template-columns: repeat(3, 100px);
      gap: 15px;
      background: rgba(255, 255, 255, 0.05);
      padding: 20px;
      border-radius: 20px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
      backdrop-filter: blur(10px);
    }

    .cell {
      width: 100px;
      height: 100px;
      font-size: 2.5rem;
      font-weight: bold;
      color: #fff;
      background: rgba(255, 255, 255, 0.1);
      border: 2px solid #00ffff;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 0 10px #00ffff55;
    }

    .cell:hover {
      background: rgba(0, 255, 255, 0.1);
      transform: scale(1.05);
    }

    .cell.x {
      color: #ff5252;
      text-shadow: 0 0 5px #ff5252cc;
    }

