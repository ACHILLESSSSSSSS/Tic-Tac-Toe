<body>

  <h1>Tic Tac Toe</h1>

  <div class="controls">
    <label>Mode:</label>
    <select id="modeSelect">
      <option value="AI">ðŸ‘¾ AI</option>
      <option value="2P">ðŸ‘¥ 2 Player</option>
    </select>

    <label>Play as:</label>
    <select id="playerSelect">
      <option value="X">X</option>
      <option value="O">O</option>
    </select>

    <button id="restartButton">Restart</button>
  </div>

  <div id="game"></div>

  <div class="message" id="message"></div>
  <div class="score" id="score">Score - X: 0 | O: 0</div>

  <script>
    const game = document.getElementById('game');
    const message = document.getElementById('message');
    const restartButton = document.getElementById('restartButton');
    const playerSelect = document.getElementById('playerSelect');
    const modeSelect = document.getElementById('modeSelect');
    const scoreDiv = document.getElementById('score');

    let currentPlayer = 'X';
    let boardState = Array(9).fill('');
    let gameActive = true;
    let mode = modeSelect.value;
    let humanPlayer = playerSelect.value;
    let aiPlayer = humanPlayer === 'X' ? 'O' : 'X';
    let scores = { X: 0, O: 0 };

    function createBoard() {
      game.innerHTML = '';
      boardState = Array(9).fill('');
      for (let i = 0; i < 9; i++) {
        const cell = document.createElement('div');
        cell.classList.add('cell');
        cell.dataset.index = i;
        cell.addEventListener('click', () => handleClick(i));
        game.appendChild(cell);
      }
    }

    function handleClick(index) {
      if (!gameActive || boardState[index] !== '') return;

      boardState[index] = currentPlayer;
      const cell = document.querySelector(`.cell[data-index="${index}"]`);
      cell.textContent = currentPlayer;
      cell.classList.add(currentPlayer.toLowerCase());

      if (checkWinner(currentPlayer)) {
        message.textContent = `Player ${currentPlayer} wins!`;
        scores[currentPlayer]++;
        updateScores();
        gameActive = false;
        return;
      }

      if (boardState.every(cell => cell !== '')) {
        message.textContent = "It's a draw!";
        gameActive = false;
        return;
      }

      if (mode === 'AI') {
        currentPlayer = aiPlayer;
        setTimeout(() => aiMove(), 300);
      } else {
        currentPlayer = currentPlayer === 'X' ? 'O' : 'X';
        message.textContent = `Player ${currentPlayer}'s turn`;
      }
    }

    function aiMove() {
      if (!gameActive) return;
      const bestMove = minimax(boardState, aiPlayer).index;
      boardState[bestMove] = aiPlayer;
      const cell = document.querySelector(`.cell[data-index="${bestMove}"]`);
      cell.textContent = aiPlayer;
      cell.classList.add(aiPlayer.toLowerCase());

      if (checkWinner(aiPlayer)) {
        message.textContent = `Player ${aiPlayer} wins!`;
        scores[aiPlayer]++;
        updateScores();
        gameActive = false;
        return;
      }

      if (boardState.every(cell => cell !== '')) {
        message.textContent = "It's a draw!";
        gameActive = false;
        return;
      }

      currentPlayer = humanPlayer;
      message.textContent = `Your turn (${humanPlayer})`;
    }

    function checkWinner(player) {
      const winCombos = [
        [0,1,2],[3,4,5],[6,7,8],
        [0,3,6],[1,4,7],[2,5,8],
        [0,4,8],[2,4,6]
      ];
      return winCombos.some(combo =>
        combo.every(i => boardState[i] === player)
      );
    }

    function updateScores() {
      scoreDiv.textContent = `Score - X: ${scores.X} | O: ${scores.O}`;
    }

    function minimax(newBoard, player) {
      const empty = newBoard.map((v, i) => v === '' ? i : null).filter(v => v !== null);
      if (checkWinner(humanPlayer)) return { score: -10 };
      if (checkWinner(aiPlayer)) return { score: 10 };
      if (empty.length === 0) return { score: 0 };

      const moves = [];

      for (let i of empty) {
        const move = {};
        move.index = i;
        newBoard[i] = player;

        if (player === aiPlayer) {
          move.score = minimax(newBoard, humanPlayer).score;
        } else {
          move.score = minimax(newBoard, aiPlayer).score;
        }

        newBoard[i] = '';
        moves.push(move);
      }

      return player === aiPlayer
        ? moves.reduce((best, move) => move.score > best.score ? move : best)
        : moves.reduce((best, move) => move.score < best.score ? move : best);
    }

    restartButton.addEventListener('click', () => {
      currentPlayer = 'X';
      humanPlayer = playerSelect.value;
      aiPlayer = humanPlayer === 'X' ? 'O' : 'X';
      mode = modeSelect.value;
      gameActive = true;
      message.textContent = mode === 'AI' ? `Your turn (${humanPlayer})` : `Player ${currentPlayer}'s turn`;
      createBoard();
      if (mode === 'AI' && humanPlayer === 'O') {
        aiMove();
      }
    });

    modeSelect.addEventListener('change', () => restartButton.click());
    playerSelect.addEventListener('change', () => restartButton.click());

    createBoard();
    message.textContent = mode === 'AI' ? `Your turn (${humanPlayer})` : `Player ${currentPlayer}'s turn`;
  </script>

</body>
</html>
